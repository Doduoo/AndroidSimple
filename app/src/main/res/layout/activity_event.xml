<?xml version="1.0" encoding="utf-8"?>
<com.android.simple.widget.GrandLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".event.EventActivity">

    <com.android.simple.widget.ParentLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_red_dark">

        <com.android.simple.widget.ChildLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@android:color/holo_blue_dark">

            <com.android.simple.widget.InternalView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@android:color/holo_green_dark"/>

        </com.android.simple.widget.ChildLayout>

    </com.android.simple.widget.ParentLayout>

</com.android.simple.widget.GrandLayout>